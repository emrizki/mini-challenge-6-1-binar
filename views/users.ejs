<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List Users</title>
  </head>
  <body>
    <div>
      <h3>
        <a href="http://localhost:<%= port %>/users/create">Create New User</a>
      </h3>
      <table>
        <thead>
          <tr>
            <th>username</th>
            <th>password</th>
            <th>action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.password %></td>
            <td>
              <a href="/users/update/<%= user.id %>">Edit</a>|
              <a
                id="delete"
                href="/users/delete/<%= user.id %>"
                onclick="confirm('are you sure want to delete?')"
                )
                >Delete</a
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
